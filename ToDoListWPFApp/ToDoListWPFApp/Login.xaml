<Window x:Class="ToDoListWPFApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListWPFApp"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="800">
    <Window.Resources>
        <!-- Gradient background resource -->
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2b7bd3" Offset="0"/>
            <GradientStop Color="#7fb3e6" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f3f7fb" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button style with subtle scale on hover -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="#1273e6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#401273e6" BlurRadius="14" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Common textbox style -->
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <StaticResource ResourceKey="BgGradient"/>
        </Grid.Background>

        <!-- Center card -->
        <Border Width="520" Height="400"
                CornerRadius="12"
                Background="{StaticResource CardGradient}"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="28"
                >
            <Border.Effect>
                <DropShadowEffect Color="#33000000" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="To-Do" FontSize="36" FontWeight="Bold" Foreground="#111" Margin="4,0,0,18"/>
                <Label Content="Username"/>
                <TextBox x:Name="UsernameBox" Height="52" FontSize="16" VerticalContentAlignment="Center"
                         Padding="10"
                         Margin="0,0,0,8" BorderBrush="#e5eef8" Background="#FFFFFF" />
                <Label Content="Password"/>
                <PasswordBox x:Name="PasswordBox" Height="52" FontSize="16" VerticalContentAlignment="Center"
                             Padding="10" Margin="0,0,0,12" BorderBrush="#e5eef8" Background="#FFFFFF"/>
                <Button Style="{StaticResource PrimaryButton}" Content="Log In" Height="56" Margin="0,6,0,6"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,12,0,0" Foreground="#2a5fa8" Cursor="Hand">
                    <Hyperlink Click="goto_Register">Register</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
