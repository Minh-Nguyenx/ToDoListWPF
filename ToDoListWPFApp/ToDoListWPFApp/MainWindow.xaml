<Window x:Class="ToDoListWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
        xmlns:local="clr-namespace:ToDoListWPFApp"
        mc:Ignorable="d"
        Title="To-Do App" Height="600" Width="820" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Nút chính -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#2b7bd3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1a5ebd"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2b7bd3" Offset="0"/>
            <GradientStop Color="#7fb3e6" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Background="{StaticResource BgGradient}" >
        <Border Width="700" Height="520" 
                Background="White" CornerRadius="12" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20" BorderBrush="#ddd" BorderThickness="1">
            
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Đăng xuất"
            Width="100"
            Height="30"
            Margin="0,0,10,0"
            Style="{StaticResource PrimaryButton}"
            Click="Logout_Click"/>
                </StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="YourList" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="#2b7bd3"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           />


                <!-- Thanh thêm công việc -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Hàng input: tiêu đề + ngày + giờ + phút -->
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="NewTaskBox"
                 Width="200"
                 Height="40"
                 FontSize="15"
                 Padding="10"
                 VerticalAlignment="Center"
                 Margin="0 0 10 0"/>

                        <DatePicker x:Name="DeadlinePicker"
                    Width="150"
                    Height="40"
                    VerticalAlignment="Center"/>

                        <ComboBox x:Name="HourBox"
                  Width="60"
                  Height="40"
                  VerticalAlignment="Center"/>

                        <ComboBox x:Name="MinuteBox"
                  Width="60"
                  Height="40"
                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Nút Add Task ở dưới, căn giữa -->
                    <Button Content="➕ Add Task"
            Width="150"
            Height="44"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            Style="{StaticResource PrimaryButton}"
            Click="AddTask_Click"/>
                </StackPanel>

                <!-- Danh sách Todo -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="TasksPanel" Orientation="Vertical" />
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</Window>
