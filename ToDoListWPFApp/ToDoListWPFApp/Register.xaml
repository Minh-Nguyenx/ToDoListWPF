<Window x:Class="ToDoListWPFApp.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListWPFApp"
        mc:Ignorable="d"
        Title="Register" Height="800" Width="800">
    <Window.Resources>
        <LinearGradientBrush x:Key="BgGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2b7bd3" Offset="0"/>
            <GradientStop Color="#7fb3e6" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f4f8fb" Offset="1"/>
        </LinearGradientBrush>

        <!-- Secondary button style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e8f2ff"/>
            <Setter Property="Foreground" Value="#1273e6"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BgGradient}">
        <Border Width="540" Height="600" CornerRadius="12" Background="{StaticResource CardGradient}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="26">
            <StackPanel>
              
                <TextBlock Text="Create account" FontSize="30" FontWeight="Bold" Margin="0,0,0,10" Foreground="#111"/>
                <Label Content="Username"/>
                <TextBox x:Name="txtUserName" Height="48" FontSize="15" Padding="10" Margin="0,6" />
                <Label Content="Password"/>
                <PasswordBox x:Name="txtPassWord" Height="48" FontSize="15" Padding="10" Margin="0,6" />
                <Label Content="Pass word again"/>
                <PasswordBox x:Name="txtPassWordAgain" Height="48" FontSize="15" Padding="10" Margin="0,6"/>
                <Label Content="Email"/>
                <TextBox x:Name="txtEmail" Height="48" FontSize="15" Padding="10" Margin="0,6"/>
                <Button Click="BtnRegister" Content="Register" Height="54" Margin="0,12,0,6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6">
                    <TextBlock Text="Already have an account? " VerticalAlignment="Center"/>
                    <TextBlock Foreground="#2a5fa8" VerticalAlignment="Center" Cursor="Hand">
                        <Hyperlink Click="Hyperlink_Click">Log In</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
